package com.blogspot.trickzstarbukkit.ParticleGun;

import org.bukkit.plugin.PluginManager;
import org.bukkit.plugin.java.JavaPlugin;

public class ParticleGun extends JavaPlugin {
	
	public static ParticleGun instance = null;
		
	public void onEnable(){
		instance = this;
		PluginManager pm = this.getServer().getPluginManager();
		pm.registerEvents(new ParticleGunEvent(),this);
	}

	public static ParticleGun getInstance() {
		return instance;
	}

}
